<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- 제목 레이아웃-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10pt">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="75dp"
            android:layout_marginLeft="30pt"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="78dp"
            android:layout_marginLeft="30pt"/>
    </LinearLayout>
    <!-- 가위바위보 결과 출력-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5pt">
        <TextView
            android:id="@+id/textUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가위"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="130dp"
            android:layout_marginLeft="30pt"
            android:textSize="15pt"
            android:background="#ffaaff"/>

        <TextView
            android:id="@+id/textComputer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바위"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="133dp"
            android:layout_marginLeft="20pt"
            android:textSize="15pt"
            android:background="#ffaaff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10pt">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점수:"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="236dp"
        android:layout_marginLeft="30pt"/>

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="236dp"
        android:layout_marginLeft="40pt"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20pt">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결과:"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="328dp"
        android:layout_marginLeft="30pt"
        android:textColor="#ff0000"/>

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승패가 표시됩니다."
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="328dp"
        android:layout_marginLeft="10pt"
        android:textColor="#ff0000"
        android:background="#ffff00"/>
    </LinearLayout>
    <!-- 이미지 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="30pt">

        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/paper" />

        <ImageView
            android:id="@+id/imageComputer"
            android:layout_width="148dp"
            android:layout_height="89dp"
            app:srcCompat="@drawable/rock"
            android:layout_marginLeft="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="10pt">

    <Button
        android:id="@+id/buttonScissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가위0"
        android:tag="0"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="512dp"
        />

    <Button
        android:id="@+id/buttonRock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바위1"
        android:tag="1"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="509dp"
        android:layout_marginLeft="5pt"/>

    <Button
        android:id="@+id/buttonPaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보2"
        android:tag="2"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="512dp"
        android:layout_marginLeft="5pt"/>

</LinearLayout>



</LinearLayout>

